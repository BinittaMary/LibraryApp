    <div class="col-md-12"> 
      
      <div class="panel" style="background-image: url(../images/lib_image2.jpg)">
        <div class="panel-body">
          
          <div class="row Login-container p-2  " >
            <div class="col-lg-4"></div>
            <!-- sign in form -->
            <div class="col-lg-4  p-5 m-3 signup-row rounded" style="background-color : #C5CAE9; border">


              <form class="row mt-5 " id ="SignUpForm" method="POST" onsubmit="return validateSignUpForm()" action="/signup/adduser">
                <span id="SignUpAlertMsg"></span> 
                <div class="form-group p-5 col-md-12 ">
                  <br>
                  <label for="SignUpUserNameLabel" class="form-label login-label ">User Name</label><label class="form-label text-danger">&nbsp;* </label>
                  <span id="SignUpUserNameSpan"></span>
                  <input type="text" class="form-control"  id="SignUpUserName" name="name" placeholder="Enter the User Name">
                </div>
                <div class="form-group col-md-12 p-3">
                  <label for="inputPassword4" class="form-label login-label">Password</label><label class="form-label text-danger">&nbsp;* </label>
                  <span id="SignUpPasswordSpan"></span>
                  <input type="password" class="form-control" id="SignUpPassword" name="password" placeholder="Enter the Password" oninput="validatePasswordStrength('SignUpPassword','SignUpPasswordSpan',2)" onfocusout="validatePasswordStrength('SignUpPassword','SignUpPasswordSpan',1)">
                </div>
                <div class="form-group col-md-12 p-3">
                  <label for="inputPassword4" class="form-label login-label">Email ID</label><label class="form-label text-danger">&nbsp;* </label>
                  <span id="SignUpEmailIdSpan"></span>
                  <input type="text" class="form-control" id="SignUpEmailId" name="emailid" placeholder="Enter the Email ID" oninput="validateEmail('SignUpEmailId','SignUpEmailIdSpan')">
                </div>
                <div class="form-group col-md-12 p-3">
                  <label for="inputphoneno" class="form-label login-label">Phone Number</label><label class="form-label text-danger">&nbsp;* </label>
                  <span id="PhoneNumberSpan"></span>
                  <input type="text" class="form-control" id="phonenumber" placeholder="Phone Number" name ="Phoneno" oninput="validatePhone('phonenumber','PhoneNumberSpan' )">
                  <!-- <label for="PasswordHint" class="form-label text-secondary">Make sure it's in any of the format XXXXXXXXXX/XXX XXX XXXX/XXX.XXX.XXXX/XXX-XXX-XXXX</label> -->
                </div>
                <div class="form-group col-md-11 d-grid p-3 text-center">
                <button type="submit" class="btn btn-primary ">Register</button>
              </div>
              </div>
              </form>
            </div>
